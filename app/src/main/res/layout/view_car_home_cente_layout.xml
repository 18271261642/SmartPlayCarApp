<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/play_color_theme"
    android:orientation="horizontal">


    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_5"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_10"
        app:shape_radius="@dimen/dp_15"
        app:shape_solidColor="#FF1B1B1B">


        <ImageView
            android:id="@+id/homeCenterLeftTopImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_cir_radius_top_ig" />


        <TextView
            android:id="@+id/homeCenterLeftTopTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#80000000"
            android:shadowRadius="3.0"
            android:text="60"
            android:textColor="#FFFF8400"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/homeCenterLeftBotImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_cir_radius_bot_ig" />


        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_cir_radius_top_ig" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowRadius="3.0"
            android:text="60"
            android:textColor="#80FFFFFF"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/homeCenterLeftBotImg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@mipmap/ic_cir_radius_bot_ig" />


    </com.hjq.shape.layout.ShapeLinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">





    </LinearLayout>

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_5"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_10"
        app:shape_radius="@dimen/dp_15"
        app:shape_solidColor="#FF1B1B1B">


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_cir_radius_top_ig" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:textColor="#80FFFFFF"
            android:textSize="30sp" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_cir_radius_bot_ig" />


        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_cir_radius_top_ig" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#80FFFFFF"
            android:shadowRadius="3.0"
            android:text="60"
            android:textColor="#80FFFFFF"
            android:textSize="30sp" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@mipmap/ic_cir_radius_bot_ig" />


    </com.hjq.shape.layout.ShapeLinearLayout>


</LinearLayout>