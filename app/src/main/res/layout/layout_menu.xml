<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:shape_endColor="#262D38"
        app:shape_startColor="#343348">

        <LinearLayout
            android:id="@+id/menuDataNormalLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:background="@mipmap/ic_menu_setting_data" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuSettingNormalLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:background="@mipmap/ic_menu_setting_normal" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/menuDeviceNormalLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:background="@mipmap/ic_menu_setting_device" />


        </LinearLayout>


    </com.hjq.shape.layout.ShapeLinearLayout>


    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:shape_solidColor="@color/transparent">

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/menuDataCheckedLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            app:shape_startColor="#15B2A3"
            app:shape_topLeftRadius="@dimen/dp_15"
            app:shape_topRightRadius="@dimen/dp_15"
            app:shape_angle="270"
            app:shape_endColor="#323245"
            android:paddingTop="@dimen/dp_10"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:background="@mipmap/ic_menu_setting_data" />

        </com.hjq.shape.layout.ShapeLinearLayout>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/menuSettingCheckedLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            app:shape_startColor="#15B2A3"
            app:shape_topLeftRadius="@dimen/dp_15"
            app:shape_topRightRadius="@dimen/dp_15"
            app:shape_angle="270"
            android:paddingTop="@dimen/dp_10"
            app:shape_endColor="#323245"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:background="@mipmap/ic_menu_setting_normal" />


        </com.hjq.shape.layout.ShapeLinearLayout>


        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/menuDeviceCheckedLayout"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:shape_startColor="#15B2A3"
            app:shape_topLeftRadius="@dimen/dp_15"
            app:shape_topRightRadius="@dimen/dp_15"
            app:shape_angle="270"
            android:paddingTop="@dimen/dp_10"
            app:shape_endColor="#323245"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:background="@mipmap/ic_menu_setting_device" />


        </com.hjq.shape.layout.ShapeLinearLayout>


    </com.hjq.shape.layout.ShapeLinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>