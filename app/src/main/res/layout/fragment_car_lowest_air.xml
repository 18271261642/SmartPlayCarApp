<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/play_color_theme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/ic_white_left_back"
        android:background="@color/transparent"
        app:lineVisible="false"
        app:title="最细行驶保护气压"
        app:titleColor="@color/white"/>



    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        app:shape_solidColor="#1F2022"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FRONT"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


            <ImageView
                android:id="@+id/carAddImgView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_add_air_img"/>

        <TextView
            android:id="@+id/carAirAddTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="@dimen/dp_5"
            android:text="50"
            android:textColor="@color/red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/carAddImgView"/>



        <ImageView
            android:id="@+id/carRemoveImgView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/carAirAddTv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_car_air_remove_img"/>



    </com.hjq.shape.layout.ShapeConstraintLayout>



    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        app:shape_solidColor="#1F2022"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REAR"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <ImageView
            android:id="@+id/carRearAddImgView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_air_img"/>

        <TextView
            android:id="@+id/carRearAirAddTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="@dimen/dp_5"
            android:text="30"
            android:textColor="@color/red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/carRearAddImgView"/>



        <ImageView
            android:id="@+id/carRearRemoveImgView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/carRearAirAddTv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_car_air_remove_img"/>
    </com.hjq.shape.layout.ShapeConstraintLayout>





</LinearLayout>