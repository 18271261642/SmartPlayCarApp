<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second_theme_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:text="My equipment"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_0_5"
        android:text="我的设备"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_30"
                app:shape_endColor="#262D38"
                app:shape_radius="@dimen/dp_15"
                android:padding="@dimen/dp_15"
                app:shape_startColor="#343348">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备名称"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="freya"
                        android:textColor="#fffd6a4a"
                        android:textSize="@dimen/sp_36" />
                </LinearLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_1"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电量60%"
                        android:padding="@dimen/dp_0_5"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已连接"
                        android:padding="@dimen/dp_0_5"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>


            </com.hjq.shape.layout.ShapeLinearLayout>


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/deviceNotifyTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="消息提醒开关"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                app:shape_endColor="#262D38"
                app:shape_radius="@dimen/dp_20"
                app:shape_startColor="#343348" />


            <com.hjq.shape.view.ShapeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="手机日程同步"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                app:shape_endColor="#262D38"
                app:shape_radius="@dimen/dp_20"
                app:shape_startColor="#343348" />

            <com.hjq.shape.view.ShapeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="关于设备"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                app:shape_endColor="#262D38"
                app:shape_radius="@dimen/dp_20"
                app:shape_startColor="#343348" />

            <com.hjq.shape.view.ShapeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="恢复出厂设置"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                app:shape_endColor="#262D38"
                app:shape_radius="@dimen/dp_20"
                app:shape_startColor="#343348" />


            <com.hjq.shape.view.ShapeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center"
                android:padding="10dp"
                android:text="解除绑定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                app:shape_radius="@dimen/dp_15"
                app:shape_solidColor="#FD6A4A" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>