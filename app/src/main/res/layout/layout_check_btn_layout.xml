<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_10"
    android:orientation="horizontal"
    app:shape_startColor="#343348"
    app:shape_endColor="#262D38"

    app:shape_radius="@dimen/dp_15"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/leftImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />


    <TextView
        android:id="@+id/leftTitleTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/sp_20"
        android:layout_height="wrap_content"
        android:text="开关"/>


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <com.bonlala.widget.view.SwitchButton
        android:id="@+id/rightCheckBtn"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_30"/>

    <ImageView
        android:id="@+id/rightBackImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_setting_note"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_gravity="center" />

</com.hjq.shape.layout.ShapeLinearLayout>