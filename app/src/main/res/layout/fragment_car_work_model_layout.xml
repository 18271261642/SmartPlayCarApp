<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/play_color_theme"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/ic_white_left_back"
        android:background="@color/transparent"
        app:lineVisible="false"
        app:title="工作模式"
        app:titleColor="@color/white"/>




    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        app:shape_solidColor="#1F2022"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACC模式"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <com.bonlala.widget.view.SwitchButton
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACC信号控制系统是否进入休眠状态。"
        android:textColor="#AEAEAE"
        android:textSize="@dimen/sp_13"
        android:layout_marginStart="@dimen/dp_15"/>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        app:shape_solidColor="#1F2022"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定时待机"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <com.bonlala.widget.view.SwitchButton
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="休眠状态下，打气泵停止工作，控制面板息屏。"
        android:textColor="#AEAEAE"
        android:textSize="@dimen/sp_13"
        android:layout_marginStart="@dimen/dp_15"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workModelRy"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>