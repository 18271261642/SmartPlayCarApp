<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shape_startColor="#343348"
    app:shape_endColor="#262D38"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    app:shape_radius="@dimen/dp_15"
    android:padding="@dimen/dp_10"
    android:orientation="vertical">


    <TextView
        android:id="@+id/itemSecondNoteTitleTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容内容内容"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dd"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dp_10"
        android:id="@+id/itemSecondTimeTv"
        app:layout_constraintTop_toBottomOf="@id/itemSecondNoteTitleTv"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/itemSecondContentTv"
        android:textSize="@dimen/sp_15"
        android:singleLine="true"
        android:maxLines="1"
        android:maxLength="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="www"
        app:layout_constraintLeft_toRightOf="@id/itemSecondTimeTv"
        app:layout_constraintTop_toTopOf="@id/itemSecondTimeTv"
        app:layout_constraintBottom_toBottomOf="@id/itemSecondTimeTv"
        android:layout_marginStart="@dimen/dp_5"/>


</com.hjq.shape.layout.ShapeConstraintLayout>