<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/play_color_theme"
    android:orientation="vertical">


    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:leftIcon="@drawable/ic_white_left_back"
        app:lineVisible="false"
        app:title="气罐压力"
        app:titleColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:text="高压（PSI）"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />


        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            app:shape_radius="@dimen/dp_5"
            app:shape_solidColor="#FF1F2022">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />


            <SeekBar

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:progress="50"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/customSpeedSlowestTv" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="200"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />


        </com.hjq.shape.layout.ShapeLinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:text="低压（PSI）"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />


        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            app:shape_radius="@dimen/dp_5"
            app:shape_solidColor="#FF1F2022">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="70"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />


            <SeekBar
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/customSpeedSlowestTv" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="170"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />


        </com.hjq.shape.layout.ShapeLinearLayout>

        <TextView
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="高压和低压差不能超过40PSI。"
            android:textColor="#FFAEAEAE"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</LinearLayout>